%li{comment_id: "#{comment.id}", style: "list-style-type: none"}
  - if comment.user.avatar?                      
    = image_tag comment.user.avatar.url(:small) 
  - else                                         
    = image_tag "missing.jpeg", size: "50"      
                                          
  %span.user
    = link_to comment.user.name, comment.user
  %span.timestamp
    wrote #{time_ago_in_words(comment.created_at)} ago.
  %br
  .comment
    = comment.content
    - if current_user?(comment.user)
      %span.deleteComment delete
