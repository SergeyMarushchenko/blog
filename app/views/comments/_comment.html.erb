
  <ul>
    <li style = "list-style-type: none" comment_id="<%=comment.id %>" >
      <%= 
         if comment.user.avatar?
            image_tag comment.user.avatar.url(:small)
         else
            image_tag "missing.jpeg", size: "50"
         end
      %> 

    <span class="user">
      <%= link_to comment.user.name, comment.user %>
    </span>
    <span class="timestamp">
      wrote <%= time_ago_in_words(comment.created_at) %> ago.
    </span><br>
    <div class="comment">
    <%= comment.content %>
    <% if current_user?(comment.user) %>
      <span class="deleteComment" >delete</span>
    <% end %>
    </div>
    </li>
  </ul>