
  <ul>
    <li>
    <%= gravatar_for comment.user, size: 50 %>
    <%= comment.user.name %>
    <span class="timestamp">
      wrote <%= time_ago_in_words(comment.created_at) %> ago.
    </span><br>
    <div class="comment">
    <%= comment.content %>
    <% if current_user?(comment.user) %>
      <%= link_to "delete", comment, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
    </div>
    </li>
  </ul>